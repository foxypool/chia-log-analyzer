{
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2021",
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitOverride": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
